# Environment Configuration

# LLM Provider
OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here  # Alternative

# LangSmith (Optional - for tracing)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your-langsmith-api-key
# LANGCHAIN_PROJECT=bpmn-generator

# Database (LangGraph Checkpoints)
DATABASE_URL=sqlite:///checkpoints.db
# DATABASE_URL=postgresql://user:pass@localhost/bpmn_generator  # Production

# Logging
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG  # For development

# Model Configuration
DEFAULT_MODEL=gpt-4o
# DEFAULT_MODEL=claude-3-5-sonnet-20241022  # Alternative

# Generation Settings
MAX_REVISION_COUNT=3
CONTEXT_WINDOW_SIZE=10

# RAG (Future - Optional)
# VECTOR_STORE_PATH=./vector_store
# EMBEDDING_MODEL=text-embedding-3-small
